@model IEnumerable<MedicineShop.Models.CartOrderDetails>

@{
    ViewBag.Title = "OrderView";

    if (this.User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (this.User.IsInRole("Courier"))
    {
        Layout = "~/Views/Shared/_LayoutCourier.cshtml";
    }
    else if (this.User.IsInRole("DeliveryMan"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";

    }
}

<h2>OrderView</h2>


<table id="products" class="table table-striped table-hover table-responsive">
    <thead>
        <tr>

            <th>Id</th>
            <th>ProductId</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>SubTotal</th>

        </tr>

    </thead>
    @foreach (var data in Model)
    {
        <tr>

            <td>@data.CartOrderId</td>
            <td>@data.ProductId</td>
            <td>@data.Quantity</td>
            <td>@data.Price</td>
            <td>@data.SubTotal</td>
        </tr>
    }

</table>
