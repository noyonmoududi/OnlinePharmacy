
@{
    ViewBag.Title = "Index";

    if (this.User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (this.User.IsInRole("Courir"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else if (this.User.IsInRole("DeliveryMan"))
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2>Index</h2>
@Html.ActionLink(" Add New Customer", "New", "Customer", null)


    <table id="customers" class="table table-striped table-hover">
        
        <thead>
        <tr>
            <th>Name</th>
            <th>District</th>
            <th>City</th>
            <th>Village</th>
            <th>PhoneNo</th>
            <th>DueAmount</th>

        </tr>
        </thead>
    </table>
@section scripts
{
    <script>
        $(document).ready(function() {
            $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                        dataSrc: ""
                },
                columns: [
                {
                    data: "customerName",
                    render: function(data, type, customer) {
                        return "<a href='/due/index/" + customer.id + "'>" + customer.customerName + "</a>";
                    }
                },
                    {
                        data: "city"
                    },
                    {
                        data: "district"
                    },
                    {
                        data: "village"
                    },
                    {
                        data: "phoneNo"
                    },
                    {
                        data: "dueAmounts"

                    }


                ]
            });
        });
    </script>
}
