@model IEnumerable<MedicineShop.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@Html.ActionLink(" Add New Product", "New", "Product", null)

    

    <table id="products" class="table table-striped table-hover table-responsive">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Group</th>
            <th>CompannyName</th>
            <th>Price</th>
            <th>Location</th>
            <th>Delete</th>
        </tr>
        </thead>
       
    </table>
    @section scripts
    {
        <script>
            $(document).ready(function() {
                $("#products").DataTable({
                    ajax: {
                        url: "/api/products",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "productName",
                            render: function(data, type, product) {
                                return "<a href='/product/edit/" + product.id + "'>" + product.productName + "</a>";
                            }
                        },
                        {
                            data: "description"
                        },
                        {
                            data: "group"
                        },
                        {
                            data: "compannyName"
                        },
                        {
                            data: "price"
                        },
                        {
                            data: "location"                                      
                        },
                        {
                            data: "id",
                            render: function(data) {
                                return "<button class='btn-link js-delete' data.product-id=" + data + ">Delete</button>";

                            } 
                        }

                    ]
                });
                });
        </script>
    }



